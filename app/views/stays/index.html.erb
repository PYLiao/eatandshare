<%= paginate @stays %>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag 'slider1.jpg' %>
      <div class="carousel-caption">
        No thing related to eat
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg' %>
      <div class="carousel-caption">
        LookLook
      </div>
    </div>
    ...
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- #################Aboves are image slider function################### -->

<% @stays.each do |stay| %>
<div class="ohyeah-box col-xs-10 col-xs-offset-1">
	<h1><%= link_to stay.name, stay_path(stay) %></h1><br />
	<i><%= stay.address %></i><br /><br />
	<p><%= stay.description %></p><br />

	<% if stay.usermodel.present? %>
	<small><%= stay.usermodel.email %></small>
	<% end %>

    <br />
    <br />

  <% if stay.photos.present? %>
    <% stay.photos.each do |photo| %>
      <%= image_tag photo.picture, :class => "img-responsive center-block" %>
      <div class="clear"></div>
      <%= photo.caption %>
    <% end %>
  <% end %>

<% if stay.comments.present? %>
      <blockquote>
        <% if stay.comments.last.humanized_rating.present? %>
        <b><%= stay.comments.last.humanized_rating %></b> -
        <% end %>
        <%= stay.comments.last.message %>
        <small><%= stay.comments.last.usermodel.email %></small>
      </blockquote>
  <% end %>

</div>
<% end %>